@model GooglePlus.Data.Model.Photo

@{
    ViewBag.Title = "CreatePhoto";
}

<h2>Create new photo</h2>

@using (Html.BeginForm("CreatePhoto", "Activities")) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Photo</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Src)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Src)
            @Html.ValidationMessageFor(model => model.Src)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>
        
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Photos")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
